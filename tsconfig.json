{
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",
		"forceConsistentCasingInFileNames": true,
		"lib": ["es2024", "ESNext.Array", "ESNext.Collection", "ESNext.Iterator"],
		"module": "nodenext",
		"target": "es2022",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "node16"
	},
	"include": ["src/**/*"],
	"extends": "@tsconfig/node22/tsconfig.json"
}
